FROM node:18-alpine

# Install serve first
RUN npm install -g serve

WORKDIR /app

# Copy everything from root (Koyeb clones whole repo)
COPY . .

# Go to frontend directory and install
WORKDIR /app/frontend
RUN yarn install --frozen-lockfile

# Build the app
RUN yarn build

# Expose port
EXPOSE 3000

# Serve from build directory
CMD ["serve", "-s", "build", "-l", "3000"]
